            </ul>
        </nav>
        <a href="/userinsights"><img src="images/cart.png" width="30px" height="30px"></a>
    </div>
</div>

 
  
       <!-- featured Products -->

       <div class="smallcontainer">
        <div class="row row-2">
            <h2>All Products</h2>
            <select >
                <option >Default Shorting</option>
                <option >Short by price</option>
                <option >Short by popularity</option>
                <option >Short by rating</option>
            </select>
        </div>
        <div class="row">
            
            <% if(data.length>0){
                for(let i=0; i< data.length ; i++){
                    %>
                    <div class="col-4"> 
                        <img src="<%= data[i].image %>">
                        <h3><%=data[i].Brand %></h3>
                        <p><%=data[i].Title %></p>
                        <h4>Auction Starts From : <%= data[i].Price %></h4>
                        <a href="/post/<%= data[i]._id %>" class="btn">More Details</a>
                    </div>
                    <% 
                }
            }
            %>
           
